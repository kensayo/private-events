<h1><%= @event.name %></h1>
<p> <%= @event.description %></p>
<strong> <%= @event.date %></strong>
<% if @attend %>
  <%= button_to 'Attend', event_attendances_path(@event), class: 'btn btn-danger' %>
<% else %>
  <%= button_to 'I will not attend', event_attendances_path(@event) + "/" + @event.attendances.where(user_id:current_user).first.id.to_s, method: 'delete', action: 'delete', class: 'btn btn-danger' %>
<% end %>

<p> Total de asistentes <%= @total %></p>
<% @event.attendances.each do |attenders| %>
  <%= attenders.user.username %>
<% end %>

